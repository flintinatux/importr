<% if flash.any? %>
  $('#flash_messages').html("<%= escape_javascript render('shared/flash_messages') %>")
<% end %>

<% if @transaction.invalid? %>
  $('#edit_transaction_form').html("<%= escape_javascript render('edit_transaction_form') %>")
<% end %>

<% if @transactions %>
  $('#edit_transaction').modal('hide')
  $('#transactions_table').html("<%= escape_javascript render('transactions_table') %>")
<% end %>