- edit_path = edit_transaction_path(transaction)
- row_data = current_user?(@user) ? { link: edit_path } : {}
%tr{ data: row_data }
  %td= current_user?(@user) ? link_to(transaction.id, edit_path) : transaction.id
  %td.center= transaction.date
  %td.description{ title: transaction.description }= truncate transaction.description, 80
  %td.right= transaction.amount