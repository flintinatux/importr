= form_for @user, html: { class: 'form-horizontal', data: { 'skip-pjax' => true } } do |f|
  = render 'shared/form_error_messages', object: @user
  .row
    .offset2
      .control-group
        = f.label :name, class: 'control-label'
        .controls
          = f.text_field :name, class: 'input-large', placeholder: 'Name', autofocus: true
          = render 'shared/field_error_message', object: @user, field: :name
      .control-group
        = f.label :email, class: 'control-label'
        .controls
          = f.text_field :email, class: 'input-large', placeholder: 'Email'
          = render 'shared/field_error_message', object: @user, field: :email
      .control-group
        = f.label :password, class: 'control-label'
        .controls
          = f.password_field :password, class: 'input-large', placeholder: 'Password'
          = render 'shared/field_error_message', object: @user, field: :password
      .control-group
        = f.label :password_confirmation, "Confirm password", class: 'control-label'
        .controls
          = f.password_field :password_confirmation, class: 'input-large', placeholder: 'Password'
          = render 'shared/field_error_message', object: @user, field: :password_confirmation
      .control-group
        .controls
          = f.submit submit_text, class: "btn btn-primary", data: { 'disable-with' => disable_text }